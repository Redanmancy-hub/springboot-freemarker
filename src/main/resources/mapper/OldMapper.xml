<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.springbootfreemarker.mapper.OldMapper">
    <select id="findByIds" parameterType="java.util.List" resultType="old">
        SELECT
        old_man_name,
        old_man_sex,
        old_man_birth,
        old_man_id_card,
        old_man_type,
        old_man_detailed_address
        FROM
        gas_old_man
        WHERE
        old_man_id
        IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>




